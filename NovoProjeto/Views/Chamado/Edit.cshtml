@model NovoProjeto.Models.Chamado

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alterando Chamado";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-primary">
        <div class="panel-heading"> Alterar dados do chamado</div>
        <div class="panel-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ChamadoId)
                
                
                <div class="form-group">
                    @Html.LabelFor(model => model.NomeChamado, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.NomeChamado, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NomeChamado, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DataChamado, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.DataChamado, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DataChamado, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.StatusChamado, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.StatusChamado, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StatusChamado, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>
            <div class="panel-footer panel-info">
                    <input type="submit" value="Gravar alterações" class="btn btn-info" />
                    @Html.ActionLink("Retornar para a listagem","Index", null, new{ @class = "btn btn-warning"})
               
            </div>
        </div>
    </div>
}
